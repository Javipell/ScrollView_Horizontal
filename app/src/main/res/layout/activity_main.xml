<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javi.pell.scrollview_horizontal.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen2" />
                <ImageView
                    android:id="@+id/imageView3"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen3" />
                <ImageView
                    android:id="@+id/imageView4"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen4" />
                <ImageView
                    android:id="@+id/imageView5"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen5" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen6" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:padding="10dp"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/imagen7" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
